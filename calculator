while True:
    # cali cali cooo
    a=input("Enter the operation: ")
    b=int(input("Enter the first number: "))
    c=int(input("Enter the second number: "))

    if a=="*":
        d=b*c
        print("The product is",d)
    elif a=="+":
        d=b+c
        print("The sum is ",d)
    elif a=="-":
        d=b-c
        print("The difference is ",d)
    elif a=="/":
        d=b/c
        print("The quotient is ",d)
    else:
        print('enter an operation from "+ - / *"')
    print()
